@using VocableMVC.Models
@addTagHelper*, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>

<html>
<head>

    <meta name="viewport" content="width=device-width" />
    <link href="~/css/StyleSheet.css" rel="stylesheet" />
    <link href="~/css/bootstrap.min.css" rel="stylesheet" />

    <title>@ViewBag.Title</title>
</head>
<body>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>


    <header>
        <div id="navigation">
            <div class="arrows">
                <span class="ar-left"></span>
                <span class="ar-right"></span>
                <span class="ar-left2"></span>
                <span class="ar-right2"></span>
            </div>
            <div class="dark-color">
                <div class="light-color">
                    <a href="../Home/Index" id="logo" style="font-family: 'Segoe Print'">Vocable Helper</a>

                    <div class="hamb"><span class="spanf"><i></i></span><span class="spans"><i></i></span><span class="spant"><i></i></span></div>
                    <nav>
                        @*<img class="loggan" src="~/VHDB/latsta2.png" />*@
                        <ul class="main-menu" style="font-family:'Segoe Print'">
                            <li><a href="../Home/Index" @*class="active-menu" *@>Hem</a></li>
                            <li><a href="../Quiz/Start">Quiz</a></li>
                            @if (User.Identity.IsAuthenticated)
                            {
                                <li><a href="../Dictionary/Main">Ordbok</a></li>
                            }
                            @if (User.Identity.IsAuthenticated)
                            {
                                <li><a href="~/Account/Logout">Logga ut</a></li>
                            }
                            else
                            {
                                <li><a href="~/Account/Login">Logga in</a></li>
                            }
                            <li><a href="../About/About">Om oss</a></li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </header>
    <div id="MainContainer">
        <div id="Mainbody" style="font-family:('Segoe Print') ">
            @RenderBody()

        </div>
    </div>

