    src: url('/css/crayoncrumble.ttf') format('truetype');
}
    </style>*@
   

    <div id="footer" class="modal-footer">
        <div class="container">
            <div class="col-md-12">
                <center>
                    <h4 class="footertext">Vocable Helper</h4>
                    <p class="footertext">Vi har utvecklat sidan för dig, tveka inte att höra av dig om du har åsikter om den!<br>
                @*<p>Utvecklad av Jörgen, Niklas, Magnus och Mats på Academy C#.NET VT17</p>*@
                    Sidan är en del av ett skolprojekt på Academy och är i version 1</p>
                    </center>
            </div>
        </div><br />
        @*<div class="row">
            <br />
            <p><center><a href="#">info@vocables.se</a> <p class="footertext"></p></center></p>
        </div>*@
    </div>
    <script>
        $(function () {
            // Denna tar hela urlen från adressfältet
            var url = window.location.href;

            // skickar vidare a taggen
            $(".main-menu a").each(function () {
                // kollar om det är samma som i adressfältet
                if (url == (this.href)) {
                    $(this).closest("li").addClass("active");
                }
            });
        });
    </script>
    <script>
        $(function () {
            // Denna tar hela urlen från adressfältet
            var url = window.location.href;

            // skickar vidare a taggen
            $(".active").each(function () {
                // kollar om det är samma som i adressfältet
                if (url == (this.href)) {
                    $(this).closest("li").addClass("active2");
                }
            });
        });
    </script>
    <script type="text/javascript">
        $(document).ready(function () {
            $(".hamb").click(function () {
                $("nav").toggleClass("active2");
                $(".spanf ").toggleClass("span1 ");
                $(".spans ").toggleClass("span2 ");
                $(".spant ").toggleClass("span3 ");
            });
        });
    </script>

</body>
</html>
